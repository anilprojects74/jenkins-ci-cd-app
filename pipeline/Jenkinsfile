pipeline {
  agent {
    docker {
      image 'node:16-alpine'
    }
  }

  environment {
    // Tell npm to use a local cache without touching any system files
    npm_config_cache = './npm-cache'
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Install') {
      steps {
        dir('frontend') {
          sh 'npm install'
        }
      }
    }

    stage('Build') {
      steps {
        dir('frontend') {
          sh 'npm run build'
        }
      }
    }
  }

  post {
    always {
      echo 'Clean up done.'
    }
  }
}
