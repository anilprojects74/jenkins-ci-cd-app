pipeline {
  agent {
    docker { image 'node:16-alpine' }
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Install') {
      steps {
        dir('frontend') {
          sh 'npm install'
        }
      }
    }

    stage('Test') {
      steps {
        dir('frontend') {
          sh 'npm test'
        }
      }
    }

    stage('Build') {
      steps {
        dir('frontend') {
          sh 'npm run build'
        }
      }
    }
  }
}
