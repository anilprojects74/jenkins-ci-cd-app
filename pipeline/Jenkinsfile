pipeline {
  agent {
    docker { image 'node:16-alpine' }
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Install') {
      steps {
        dir('frontend') {
          sh '''
            npm config set cache ./npm-cache --global
            npm install
          '''
        }
      }
    }

    stage('Test') {
      steps {
        dir('frontend') {
          sh 'npm test'
        }
      }
    }

    stage('Build') {
      steps {
        dir('frontend') {
          sh 'npm run build'
        }
      }
    }
  }

  post {
    always {
      echo 'Cleaning up workspace...'
      sh 'rm -rf frontend/npm-cache'
    }

    success {
      echo 'Build succeeded!'
    }

    failure {
      echo 'Build failed!'
    }
  }
}
