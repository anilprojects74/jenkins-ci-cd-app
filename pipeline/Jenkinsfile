pipeline {
  agent any

  environment {
    NODE_ENV = 'test'
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Install Dependencies') {
      steps {
        sh 'npm ci'  // use `npm install` if not using a lockfile
      }
    }

    stage('Run Unit Tests') {
      steps {
        sh 'npm run test'
      }
    }

    stage('Build (Optional)') {
      steps {
        sh 'npm run build'
      }
    }
  }

  post {
    always {
      junit 'test-results/*.xml'
      echo 'Pipeline finished.'
    }
    failure {
      echo 'Tests or build failed.'
    }
  }
}
